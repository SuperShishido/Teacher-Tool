<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <Label text="Recommend-Easy">
         <font>
            <Font name="Calibri Bold" size="36.0" />
         </font>
         <VBox.margin>
            <Insets top="85.0" />
         </VBox.margin>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#0042a0cc" />
                  <Stop color="#fa0000ba" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label contentDisplay="CENTER" prefHeight="87.0" prefWidth="318.0" text="A useful tool for Faculties to auto-generate Letter of Recommendations for their students" textAlignment="CENTER" textFill="#424242" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <AnchorPane prefHeight="266.0" prefWidth="439.0" style="-fx-background-color: #F1D9D9;">
         <children>
            <Label layoutX="208.0" layoutY="48.0" style="-fx-text-fill: black; -fx-font-size: 20; -fx-font-weight: bold;" text="Get Started for free" />
            <PasswordField fx:id="password" layoutX="160.0" layoutY="133.0" prefHeight="26.0" prefWidth="280.0" promptText="Password" style="-fx-background-color: white;">
               <font>
                  <Font name="Calibri" size="13.0" />
               </font></PasswordField>
            <Button fx:id="loginButton" layoutX="200.0" layoutY="183.0" mnemonicParsing="false" onAction="#Login" prefHeight="32.0" prefWidth="200.0" style="-fx-border-radius: 10; -fx-background-color: #4285F4;" text="Go to Password Reset page" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="13.0" />
               </font></Button>
            <Label layoutX="160.0" layoutY="109.0" style="-fx-font-size: 14;" text="Password" />
            <Label fx:id="loginMessageLabel" layoutX="286.0" layoutY="228.0" textFill="#ff2121">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="119.0" layoutY="21.0" text="DBConnection" />
            <Label fx:id="dbstatus" layoutX="219.0" layoutY="21.0" text="Status" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </AnchorPane>
   </children>
</VBox>
